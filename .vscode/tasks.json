{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build Engine",
            "linux":
            {
                "command": "${workspaceFolder}/build.sh"
            },
            "osx":
            {
                "command": "${workspaceFolder}/build.sh"
            },
            "options":
            {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher":
            [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
    ]
}